{
	"globals": {
		"console": true,
		"process": true
	},
	"env":{
		"commonjs": true, 
		"amd": true
	},
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 5,
		"sourceType": "script",
		"ecmaFeatures": {
			"impliedStrict": false
		}
	},
	"rules": {
		"indent": ["warn", "tab", {
			"MemberExpression": "off", 
			"SwitchCase": 1, 
			"ignoredNodes": ["JSXElement", "JSXElement > *", "JSXAttribute", "JSXIdentifier", "JSXNamespacedName", "JSXMemberExpression", "JSXSpreadAttribute", "JSXExpressionContainer", "JSXOpeningElement", "JSXClosingElement", "JSXText", "JSXEmptyExpression", "JSXSpreadChild"]
		}],
		"linebreak-style": ["warn", "unix"],
		"brace-style": ["warn", "stroustrup", { "allowSingleLine": true }],
		"quotes": ["error", "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
		"jsx-quotes": ["error", "prefer-double"],
		"semi": ["error", "always"],
		"no-unused-vars": "error",
		"no-console": ["warn", { "allow": ["error"] }],
		"no-alert": "warn",
		"no-void": "error",
		"no-implicit-coercion": "error",
		"no-use-before-define": "error",
		"no-throw-literal": "error",
		"no-proto": "error",
		"no-redeclare": "error",
		"no-nested-ternary": "error",
		"no-multiple-empty-lines": ["warn", {"max": 2, "maxBOF": 0, "maxEOF": 0}],
		"no-mixed-spaces-and-tabs": ["warn", false],
		"no-multi-spaces": "warn",
		"no-eval": "error",
		"no-implied-eval": "error",
		"no-trailing-spaces": "warn",
		"no-with": "error",
		"no-cond-assign": ["error", "except-parens"],
		"no-else-return": ["error", {"allowElseIf": false}],
		"no-param-reassign": "off",
		"no-unused-expressions": ["error", {
			"allowShortCircuit": true,
			"allowTernary": true,
			"allowTaggedTemplates": true
		}],
		"no-delete-var": "error",
		"no-new": "off",
		"no-new-func": "error",
    	"no-new-require": "error",
		"no-new-wrappers": "warn",
		"no-shadow": "error",
		"no-shadow-restricted-names": "error",
		"no-unneeded-ternary": "error",
		"no-caller": "error",
		"no-catch-shadow": "off",
		"no-confusing-arrow": ["error", {"allowParens": true}],
		"no-invalid-this": "error",
		"no-label-var": "error",
		"no-labels": "error",
		"no-unused-labels": "error",
		"no-lone-blocks": "error",
		"no-loop-func": "error",
		"no-undef": ["error", {"typeof": false}],
		"no-undef-init": "error",
		"no-useless-computed-key": "error",
		"no-useless-concat": "error",
		"no-useless-constructor": "error",
		"no-useless-escape": "error",
		"no-useless-rename": "error",
		"no-useless-return": "off",
		"no-useless-call": "error",
		"no-negated-condition": "error",
		"no-extend-native": "error",
		"one-var-declaration-per-line": "error",
		"class-methods-use-this": "warn",
		"comma-dangle": ["error", "never"],
		"comma-spacing": "warn",
		"comma-style": ["error", "last"],
		"arrow-parens": ["warn", "as-needed"],
		"arrow-spacing": "warn",
		"computed-property-spacing": "error",
		"dot-location": ["error", "property"],
		"dot-notation": ["error", { "allowKeywords": false }],
		"generator-star-spacing": "warn",
		"lines-around-comment": ["warn", {
			"beforeBlockComment": true,
			"afterBlockComment": false,
			"beforeLineComment": true,
			"afterLineComment": false,
			"allowBlockStart": true,
			"allowBlockEnd": true,
			"allowClassStart": true,
			"allowClassEnd": true,
			"allowObjectStart": true,
			"allowObjectEnd": true,
			"allowArrayStart": true,
			"allowArrayEnd": true,
			"ignorePattern": "^\\s*?import\\s|require\\s*?\\([\\s\\S]+?\\)|^\\s*?(let|const|var)\\s"
		}],
		"spaced-comment": ["warn", "always", { "exceptions": ["-", "*"]}],
		"new-parens": "error",
		"eqeqeq": ["error", "always"],
		"getter-return": ["error", { "allowImplicit": true }],
		"id-length": ["error", {
			"min": 2,
			"properties": "never",
			"exceptions": ["i", "x", "y", "z", "$", "_"]
		}],
		"id-blacklist": ["warn", "entity", "cb"],
		"id-match": ["error", "^[\\w$]+(?![А-яЁё])$", { "properties": true,  "onlyDeclarations": false }],
		"strict": ["warn", "safe"],
		"curly": ["error", "multi-line", "consistent"],
		"unicode-bom": ["error", "never"],
		"vars-on-top": "error",
		"max-len": ["error", {
			"code": 120,
			"ignoreComments": true,
			"ignoreTrailingComments": true,
			"ignoreUrls": true, 
			"ignoreStrings": true,
			"ignoreTemplateLiterals": false,
			"ignoreRegExpLiterals": false
		}],
		"max-lines": ["warn", {"max": 300, "skipComments": true, "skipBlankLines": true}],
		"max-nested-callbacks": ["error", 5],
		"max-depth": ["error", 5],
		"complexity": ["error", 20],
		"max-params": ["warn", 4],
		"max-statements": ["error", 50],
		"max-statements-per-line":["error", { "max": 4 }],
		"quote-props": ["warn", "consistent-as-needed"],
		"semi-style": ["error", "last"],
		"semi-spacing": ["warn", {"before": false, "after": true}],
		"template-curly-spacing": ["warn", "never"],
		"template-tag-spacing": "error",
		"yield-star-spacing": "error",
		"wrap-iife": ["error", "outside"],
		"space-infix-ops": "error",
		"default-case": "off",
		"eol-last": ["warn", "never"],
		"new-cap": ["error", { "newIsCap": true }],
		"object-curly-spacing": ["warn", "always"],
		"for-direction": "error",
		"func-call-spacing": ["warn", "never"],
		"func-style": ["error", "declaration"],
		"key-spacing": ["warn", { "beforeColon": false, "afterColon": true }],
		"keyword-spacing": "warn",
		"operator-assignment": "error",
		"operator-linebreak": ["warn", "before", { "overrides": { "?": "after", ":": "after" } }],
		"padding-line-between-statements": ["warn",
			{ "blankLine": "always", "prev": "directive", "next": "*" },
			{ "blankLine": "any", "prev": "directive", "next": "directive" },
			{ "blankLine": "always", "prev": ["const", "let", "var"], "next": "*" },
			{ "blankLine": "any", "prev": ["const", "let", "var"], "next": ["const", "let", "var"] },
			{ "blankLine": "always", "prev": "*", "next": "cjs-export" },
			{ "blankLine": "always", "prev": "cjs-export", "next": "*" },
			{ "blankLine": "any", "prev": "cjs-export", "next": "cjs-export" },
			{ "blankLine": "always", "prev": "*", "next": "export" },
			{ "blankLine": "always", "prev": "export", "next": "*" },
			{ "blankLine": "any", "prev": "export", "next": "export" }
		],
		"function-paren-newline": ["warn", "consistent"],
		"prefer-promise-reject-errors": "error",
		"space-before-blocks": "warn",
		"space-before-function-paren": ["warn", {
			"anonymous": "always",
			"named": "always",
			"asyncArrow": "always"
		}],
		"space-in-parens": "warn",
		"space-unary-ops": ["error", {"words": true, "nonwords": false}],
		"switch-colon-spacing": "warn",
		"object-curly-newline": ["error", { "consistent": true, "multiline": true, "minProperties": 5 }],
		"object-property-newline": "off",
		"no-process-exit": "warn",
		"no-mixed-operators": ["warn", { "allowSamePrecedence": true }],
		"valid-typeof": ["error", { "requireStringLiterals": true }],
		"no-global-assign": ["error", {"exceptions": []}],
		"no-magic-numbers": ["error", {
			"ignore": [-1, 0, 1],
			"ignoreArrayIndexes": true,
			"enforceConst": true,
			"detectObjects": false
		}],
		"no-empty": ["error", { "allowEmptyCatch": true }],
		"no-debugger": "warn",
		"padded-blocks": ["warn", "never"],
		"no-path-concat": "error",
		"no-buffer-constructor": "error",
		"handle-callback-err": ["error", "^(err|error|^.+Error)$"],
		"array-callback-return": "error"
	}
}