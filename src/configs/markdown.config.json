{
	"plugins": ["markdown"],
	"overrides": [
		{
			"files": ["**/*.{md,markdown}"],
			"processor": "markdown/markdown"
		},
		{
			"files": ["**/*.{md,markdown}/*.{js,ts,javascript,typescript,jsx,tsx,node,vue}"],
			"parserOptions": {
				"sourceType": "module"
			},
			"rules": {
				"indent": ["warn", 3, {
					"MemberExpression": "off", 
					"SwitchCase": 1
				}],
				"no-undef": "off",
				"no-unused-vars": "off",
				"no-console": "off",
				"filenames/match-regex": "off",
				"filenames/match-exported": "off",
				"import/extensions": "off",
				"import/no-unresolved": "off",
				"import/no-extraneous-dependencies": "off",
				"import/no-anonymous-default-export": "off",
				"node/no-unpublished-import": "off",
				"unicorn/filename-case": "off",
				"react/jsx-indent": ["warn", 3, {
					"checkAttributes": false,
					"indentLogicalExpressions": true
				}],
				"react/jsx-indent-props": ["warn", 3],
				"react/react-in-jsx-scope": "off"
			}
		},
		{
			"files": ["**/*.{md,markdown}/*.{jsx,tsx}"],
			"rules": {
				"react/no-multi-comp": "off"
			}
	  	},
		{
			"files": ["**/*.{md,markdown}/*.vue"],
			"rules": {
				"vue/html-indent": ["warn", 3, {
					"attribute": 1,
					"baseIndent": 1,
					"closeBracket": 0,
					"alignAttributesVertically": true
				 }],
				"vue/script-indent": ["warn", 3, {
					"baseIndent": 0,
					"switchCase": 1					
				}],
				"vue/match-component-file-name": "off",
				"vue/no-unregistered-components": "off",
				"vue/one-component-per-file": "off"
			}
	  }
	]
}