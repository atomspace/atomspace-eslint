{
	"plugins": ["html"],
	"overrides": [
		{
			"files": [ "**/*.html", "**/*.htm", "**/*.php" ],
			"parserOptions": {
				"sourceType": "script",
				"ecmaFeatures": {
					"impliedStrict": true
				}
			},
			"rules": {
				"eol-last": ["warn", "always"],
				"import/no-nodejs-modules": "error"
			}
		}
	],
	"settings": {
		"html/html-extensions": [".html", ".htm", ".php"],
		"html/xml-extensions": [".xhtml", ".xml"],
		"html/indent": "+tab",
		"html/report-bad-indent": "warn"
	}
}