{
	"plugins": ["vuejs-accessibility"],
	"rules": {
		"vuejs-accessibility/accessible-emoji": "error",
		"vuejs-accessibility/alt-text": "error",
		"vuejs-accessibility/anchor-has-content": "error",
		"vuejs-accessibility/mouse-events-have-key-events": "error",
		"vuejs-accessibility/click-events-have-key-events": "off",
		"vuejs-accessibility/label-has-for": ["error", {
			"components": [],
			"controlComponents": [],
			"required": {
					"some": [ "nesting", "id" ]
			},
			"allowChildren": true
		}],
		"vuejs-accessibility/no-autofocus": ["warn", { "ignoreNonDOM": true }],
		"vuejs-accessibility/no-onchange": "off",
		"vuejs-accessibility/tabindex-no-positive": "warn",
		"vuejs-accessibility/no-distracting-elements": "error",
		"vuejs-accessibility/heading-has-content": "error",
		"vuejs-accessibility/media-has-caption": "off",
		"vuejs-accessibility/iframe-has-title": "error",
		"vuejs-accessibility/no-access-key": "error",
		"vuejs-accessibility/form-has-label": "off",

		"vuejs-accessibility/interactive-supports-focus": "error",
		"vuejs-accessibility/aria-role": ["error", { "ignoreNonDOM": false }],
		"vuejs-accessibility/aria-props": "error",
		"vuejs-accessibility/aria-unsupported-elements": "error",
		"vuejs-accessibility/no-redundant-roles": ["error", { "nav": ["navigation"] }],
		"vuejs-accessibility/role-has-required-aria-props": "error"
	}
}