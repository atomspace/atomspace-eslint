{
	"plugins": [
		"no-secrets",
		"xss"
	],
	"rules": {
		"no-secrets/no-secrets":["error", {
			"additionalDelimiters": ["_", "-"],
			"ignoreModules": true,
			"ignoreContent": ["^http(s)://", "^data://", "^ws(s)://"]
		}],
		"xss/no-mixed-html": "off",
		"xss/no-location-href-assign": ["error", {
			"escapeFunc": "escape"
	  }]
	}
}